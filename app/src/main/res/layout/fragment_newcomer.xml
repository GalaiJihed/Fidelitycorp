<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFF"
    tools:context=".Frags.NewcomerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100sp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/addclient" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Customers"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#8A8F9C">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEDED"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="500dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Enter  Phone Number"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="81dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="+216"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/newcomer_number"
                        android:layout_width="165dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/open_sans_semibold"

                        android:textColor="@color/colorPrimary"
                        android:textSize="30sp" />
                </LinearLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:horizontalSpacing="50dp"
                    android:verticalSpacing="100dp"
                    app:columnCount="3"
                    app:orientation="horizontal">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="1"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="2"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="3"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn4"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="4"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="5"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="6"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn7"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="7"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn8"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="8"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn9"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="9"
                        android:textSize="30sp" />

                    <Button
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:enabled="false"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:textSize="30sp"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btn0"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_phone_bg"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="0"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btnrem"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/delete_icon"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="30sp" />


                </androidx.gridlayout.widget.GridLayout>

                <Button
                    android:id="@+id/btnnotify"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="Validate"
                    android:textColor="@color/design_default_color_background" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>