<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Acts.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="1278dp"
        android:layout_height="523dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_fidelity"
        app:srcCompat="@drawable/corners_login_white" />

    <ImageView
        android:id="@+id/logo_fidelity"
        android:layout_width="564dp"
        android:layout_height="373dp"
        android:layout_marginStart="395dp"
        android:layout_marginEnd="395dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/fidelity_icon" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="222dp"
        android:layout_height="62dp"
        android:layout_marginStart="528dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/armata"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_password_login" />

    <EditText
        android:id="@+id/id_phone_number_login"
        android:layout_width="561dp"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="360dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="PhoneNumber"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/logo_fidelity" />

    <EditText
        android:id="@+id/id_password_login"
        android:layout_width="561dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="360dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/id_phone_number_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="575dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/alike_angular"
        android:text="Need Support?"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>